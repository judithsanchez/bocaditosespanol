{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"lib": ["es2018", "dom"],
		"baseUrl": ".",
		"paths": {
			"@app/*": ["src/*"],
			"@songs/*": ["src/activities/songs/*"],
			"@utils/*": ["src/utils/*"]
		},
		"typeRoots": ["node_modules/@types", "types"],
		"types": ["jest"],
		"esModuleInterop": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules"]
}
